{% extends "layout.twig" %}

{% block content %}
    <head xmlns="http://www.w3.org/1999/html">
        <title>Connexion</title>
    </head>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title col-sm-offset-4">Connexion</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path_for('connexion') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email"
                                           autofocus="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password"
                                           type="password" value="">
                                </div>
                                <input type="submit" value="Se connecter" class="btn btn-lg btn-success btn-block">
                                <a class="btn btn-sm btn-default btn-block" href="{{ path_for('inscription') }}">
                                    Pas encore inscrit ?
                                </a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}