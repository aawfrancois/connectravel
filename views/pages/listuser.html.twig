{% extends "layout.twig" %}

{% block title %}{{ parent() }} | Liste Utilisateur{% endblock %}

{% block content %}

<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            Liste des Utilisateurs des Connectravel
        </div>
        <div class="panel-body">
            <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                <div class="row">

                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <legend>
                            legend
                        </legend>
                        <a class="btn btn-primary btn-sm pull-right margin-bottom-5" href="/adduser">ajouter un utilisateur</a>
                        <table width="100%"
                               class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                               id="dataTables-example" role="grid" aria-describedby="dataTables-example_info"
                               style="width: 100%;">
                            <thead>
                            <tr>
                                <th>Prenom</th>
                                <th>Nom</th>
                                <th>Date anniversaire</th>
                                <th>Adresse</th>
                                <th>Code postal</th>
                                <th>Ville</th>
                                <th>Telephone</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for user in CompanionCollection %}
                                <tr class="gradeA odd" role="row">
                                    <td>
                                        {{ user.getFirstName }}
                                    </td>
                                    <td>
                                        {{ user.getLastName }}
                                    </td>
                                    <td>
                                        {{ user.getBirthDate }}
                                    </td>
                                    <td>
                                        {{ user.getAdress }}
                                    </td>
                                    <td>
                                        {{ user.getPostalCode }}
                                    </td>
                                    <td>
                                        {{ user.getCity }}
                                    </td>
                                    <td>
                                        {{ user.getPhone }}
                                    </td>
                                    <td>
                                        {{ user.getEmail }}
                                    </td>
                                    <td>
                                        {{ user.getRole }}
                                    </td>
                                    <td>
                                        <a href="" class="btn btn-primary btn-sm"><i class="fa fa-fw fa-edit"></i>
                                            Editer
                                        </a>
                                        <a href="" class="btn btn-danger btn-sm"><i class="fa fa-fw fa-trash-o"></i>
                                            supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>
{% endblock %}
