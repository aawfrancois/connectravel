{% extends "layout.twig" %}

{% block title %}{{ parent() }} | Connexion{% endblock %}

{% block content %}


    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title col-sm-offset-4">Connexion</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="/admin/user/login" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="email" type="email">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password">
                                </div>
                                <input type="submit" value="Se connecter" class="btn btn-lg btn-success btn-block">
                                <a class="btn btn-sm btn-default btn-block" href="/admin/user/subscription">
                                    Pas encore inscrit ?
                                </a>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}