{% extends "layout.twig" %}

{% block content %}

    <head>
        <title>Inscription</title>
    </head>

    <div class="container">
        <header class="row">
            <div class="col-lg-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title col-sm-offset-4">Inscription</h3>
                    </div>
                    <div class="panel-body">
                        <form action="" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input type="text" class="form-control" name="email" id="email">
                                </div>
                                <span id="name_status"></span>
                                <div class="form-group">
                                    <label for="password">Mot de passe</label>
                                    <input type="password" class="form-control" name="password" id="password">
                                </div>
                                <div class="form-group">
                                    <label for="password-confirm">Confirmation mot de passe</label>
                                    <input type="password" class="form-control" name="password-confirm" id="password-confirm">
                                </div>
                                <div class="form-group">
                                    <input type="hidden" name="__posted" value="1"/>
                                    <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </header>
    </div>

{% endblock %}