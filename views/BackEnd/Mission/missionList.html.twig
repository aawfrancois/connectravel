{% extends "layout.twig" %}

{% block title %}{{ parent() }} | Liste Mission{% endblock %}

{% block content %}

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Liste des Missions proposé par Connectravel
            </div>
            <div class="panel-body">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <div class="row">

                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <legend>
                                legend
                            </legend>
                            <a class="btn btn-primary btn-sm pull-right margin-bottom-5" href="/admin/mission/add">ajouter une mission</a>
                            <table width="100%"
                                   class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                                   id="dataTables-example" role="grid" aria-describedby="dataTables-example_info"
                                   style="width: 100%;">
                                <thead>
                                <tr>
                                    <th>Numéro de mission</th>
                                    <th>Lieu de départ</th>
                                    <th>Lieu d'arrivée</th>
                                    <th>Temps de mission</th>
                                    <th>Date</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for mission in MissionCollection %}
                                    <tr class="gradeA odd" role="row">
                                        <td>
                                            {{ mission.getMissionNumber }}
                                        </td>
                                        <td>
                                            {{ mission.getPlaceDeparture }}
                                        </td>
                                        <td>
                                            {{ mission.getPlaceArrival }}
                                        </td>
                                        <td>
                                            {{ mission.getTime }}
                                        </td>
                                        <td>
                                            {{ mission.getDate }}
                                        </td>
                                        <td>

                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
{% endblock %}
