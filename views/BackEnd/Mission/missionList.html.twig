{% extends "layout.twig" %}

{% block title %}{{ parent() }} | Liste Mission{% endblock %}

{% block content %}

    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Liste des Missions proposé par Connectravel
            </div>
            <div class="panel-body">
                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer ">
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <legend>
                                legend
                            </legend>
                            {% if (session.role == 'admin') or (session.role == 'customer') %}
                                <a class="btn btn-primary btn-sm pull-right margin-bottom-5" href="/admin/mission/edit"><i
                                            class="fa fa-fw fa-plus-square-o"> </i>
                                    Ajouter une mission</a>
                            {% endif %}
                            <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline "
                                   id="dataTables-example" role="grid" aria-describedby="dataTables-example_info"
                                   style="width: 100%;">
                                <thead>
                                <tr>
                                    <th>Numéro de mission</th>
                                    <th>Lieu de départ</th>
                                    <th>Heure de début</th>
                                    <th>Lieu d'arrivée</th>
                                    <th>Heure de fin</th>
                                    <th>Temps de mission</th>
                                    <th>Date</th>
                                    {% if (session.role == 'admin') %}
                                    <th>
                                        Accepté par
                                    </th>
                                    {% endif %}
                                    <th class="text-center">
                                        {% if (session.role == 'companion') %}
                                            Action
                                        {% elseif (session.role == 'admin') %}
                                            Actions
                                        {% endif %}
                                    </th>
                                </tr>
                                </thead>
                                <tbody>

                                {% for mission in MissionCollection %}
                                    <tr class="gradeA odd" role="row">
                                        <td>
                                            {{ mission.getMissionNumber }}
                                        </td>
                                        <td>
                                            {{ mission.getPlaceDeparture }}
                                        </td>
                                        <td>
                                            {{ mission.getStartTime }}
                                        </td>
                                        <td>
                                            {{ mission.getPlaceArrival }}
                                        </td>
                                        <td>
                                            {{ mission.getEndTime }}
                                        </td>
                                        <td>
                                            {{ mission.getTime }}
                                        </td>
                                        <td>
                                            {{ mission.getDate }}
                                        </td>
                                        {% if (session.role == 'admin') %}
                                        <td>
                                            {{ mission.getAccept }}
                                        </td>
                                        {% endif %}
                                        <td>
                                            {% if (session.role == 'admin') or (session.role == 'customer') %}
                                                <a href="/admin/mission/edit?id={{ mission.id }}" data-toggle="tooltip" data-placement="top" title="Editer" class="btn btn-primary btn-sm"><i class="fa fa-fw fa-edit"></i>
                                                </a>
                                            {% elseif (session.role == 'companion') %}
                                                <a href="/admin/mission/accept?id={{ mission.id }}" class="btn btn-primary btn-sm center-block"><i
                                                            class="fa fa-fw fa-check"></i>
                                                    Accepter
                                                </a>
                                            {% endif %}
                                            {% if (session.role == 'admin') %}
                                                <a href="/admin/mission/delete?id={{ mission.id }}" data-toggle="tooltip" data-placement="top" title="Supprimer" class="btn btn-danger btn-sm"><i class="fa fa-fw fa-trash-o"></i>
                                                </a>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    {% block javascript %}
        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/js/jquery-3.2.1.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript" src="/js/jquery.validate.js"></script>
        <script type="text/javascript" src="/js/bootstrap.min.js"></script>
        <script>
            $(document).ready(function() {
                $('#dataTables-example').DataTable();

                $('[data-toggle="tooltip"]').tooltip();
            } );
        </script>
    {% endblock %}
{% endblock %}

